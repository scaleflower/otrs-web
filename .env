# Environment variables for OTRS Web Application

# Secret key for Flask application
SECRET_KEY=dev-secret-key-change-in-production

# Database configuration
# For SQLite (default):
SQLALCHEMY_DATABASE_URI=sqlite:///db/otrs_data.db

# For PostgreSQL, uncomment and modify the following line:
# SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/otrs_db

# Update configuration
APP_UPDATE_ENABLED=True
APP_UPDATE_REPO=scaleflower/otrs-web
# APP_UPDATE_GITHUB_TOKEN=your_actual_github_token_here
APP_UPDATE_POLL_INTERVAL=3600
APP_UPDATE_SOURCE=github

# Admin password
ADMIN_PASSWORD=admin@2025